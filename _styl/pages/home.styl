/*--------------------------------------------------------------------
*
* $HOME
*
--------------------------------------------------------------------*/

body.home > .container
  width: 100%
  max-width: 100%

// &yet teams
.teams-grid
  display: block

.teams-item
  padding: 30px

  p
    margin-bottom: 0

  .logo-container
    width: auto
    margin: 0 auto 20px
    display: inline-block

    a
      height: 80px
      display: flex
      align-items: center

  .logo
    &.nsp
      height: 80px
    &.yesand
      height: 65px
    &.lift
      height: 50px
    &.seaworthy
      height: 35px

@media screen and (max-width: $breakpoint-smartphone)

  .teams-category
    position: relative

    &:not(:first-of-type)
      padding-top: $space*2

      &:before
        content: ''
        width: 150px
        height: 1px
        margin-left: -(@width/2)
        position: absolute
        left: 50%
        top: 15px
        background: $gray-lighter

@media screen and (min-width: $breakpoint-smartphone + 1)

  .teams-grid
    display: flex
    flex-wrap: wrap
    align-items: stretch

  .teams-category
    flex: none
    width: 100%
    margin: 0
    padding: 20px
    border-bottom: $ui-border
    border-top: $ui-border

  .teams-item
    flex: none
    width: 50%

    .logo-container
      margin-bottom: $space

    &:not(:nth-child(3n))
      border-right: $ui-border

@media screen and (min-width: $breakpoint-tablet + 1)

  .teams-category,
  .teams-item
    width: 33.333%

  .teams-category
    font-size: 20px
    padding-bottom: 40px
    border: none
    &.security
      order: 1
    &.design
      order: 2
    &.realtime
      order: 3

  .teams-item
    &.team-nsp
      order: 4
      border-bottom: $ui-border
    &.team-yesand
      order: 5
      border-bottom: $ui-border
    &.team-talky
      order: 6
      border-bottom: $ui-border
      border-right: none
    &.team-lift
      order: 7
      border-right: $ui-border
    &.team-seaworthy
      order: 8
      border-right: $ui-border
    &.team-talky-core
      order: 9