/*--------------------------------------------------------------------
* $HOME
--------------------------------------------------------------------*/

@import '../globals/_reset'
@import '../globals/_variables'

$bg = #26cbff

$face-1 = 620px
$face-2 = $face-1 + 220
$face-3 = $face-2 + 220
$face-4 = $face-3 + 220
$face-5 = $face-4 + 220
$face-6 = $face-5 + 220
$face-7 = $face-6 + 220
$face-8 = $face-7 + 220

$img-h = 400px
$img-w = 200px
$shadow-h = 428px

:root

  // -100
  @media screen and (max-height: 550px)
    --face-y: 100px
    --neck-y: -490px

  @media screen and (min-height: 551px)
    --face-y: 200px
    --neck-y: -390px

  // +200
  @media screen and (min-height: 820px)
    --face-y: 400px
    --neck-y: -190px

  // +470
  @media screen and (min-height: 1100px)
    --face-y: 570px
    --neck-y: -20px

// make face
face(num,width,width2)
  min-width: width
  bottom: var(--face-y)
  z-index: (32 - (num * 2))
  img.right
    right: (100px * num + 10 * num)
  img.left
    left: (100px * num + 10 * num)
  @media screen and (min-width: width + 1)
    img.right
      transform: scale(1.07) translate(6px,0)
    img.left
      transform: scale(1.07) translate(-6px,0)
  @media screen and (min-width: width + 9)
    img.right
      transform: scale(1.07) translate(6px,7px)
    img.left
      transform: scale(1.07) translate(-6px,7px)
  @media screen and (max-width: width2)
    opacity: 0

//  make mask
mask(num,name,width,width2)
  @media screen and (max-width: width2)
    opacity: 0
  min-width: width
  z-index: (32 - (num * 2) + 1)
  bottom: var(--face-y)
  @media screen and (min-width: width + 1)
    bottom: calc(var(--face-y) - 14px)
  @media screen and (min-width: width + 9)
    bottom: calc(var(--face-y) - 22px)
  .left,
  .right
    min-width: width
    @media screen and (min-width: width + 1)
      height: $shadow-h
      mask-size: auto $shadow-h
  .left
    mask-image: url('/assets/images/left-' + name + '-mask.svg')
    mask-position: left (100px * num + 10 * num) top 0
    @media screen and (min-width: width + 1)
      mask-position: left (100px * num + 10 * (num - 1) - 3) top 0
    &:after
      left: (100px * num + 10 * num)
  .right
    mask-image: url('/assets/images/right-' + name + '-mask.svg')
    mask-position: right (100px * num + 10 * num) top 0
    @media screen and (min-width: width + 1)
      mask-position: right (100px * num + 10 * (num - 1) - 3) top 0
    &:after
      right: (100px * num + 10 * num)

.face:nth-of-type(1)
  face(1,$face-1,0)
.mask:nth-of-type(2)
  mask(2,skull,$face-2,$face-1)
.face:nth-of-type(2)
  face(2,$face-2,$face-1)
.mask:nth-of-type(3)
  mask(3,pizza,$face-3,$face-2)
.face:nth-of-type(3)
  face(3,$face-3,$face-2)
.mask:nth-of-type(4)
  mask(4,pops,$face-4,$face-3)
.face:nth-of-type(4)
  face(4,$face-4,$face-3)
.mask:nth-of-type(5)
  mask(5,mustache,$face-5,$face-4)
.face:nth-of-type(5)
  face(5,$face-5,$face-4)
.mask:nth-of-type(6)
  mask(6,picasso,$face-6,$face-5)
.face:nth-of-type(6)
  face(6,$face-6,$face-5)
.mask:nth-of-type(7)
  mask(7,helmet,$face-7,$face-6)
.face:nth-of-type(7)
  face(7,$face-7,$face-6)
.mask:nth-of-type(8)
  mask(8,cyborg,$face-8,$face-7)
.face:nth-of-type(8)
  face(8,$face-8,$face-7)
  @media screen and (min-width: $face-6)
    opacity: 1


//-------------
// general
//-------------
html
  background-color: $bg

body.home
  height: 100vh
  position: relative
  display: flex
  align-items: flex-end
  justify-content: center
  overflow: hidden
  font-family: Helvetica, Arial, sans-serif
  font-weight: $font-weight-light
  font-size: 112.5%
  line-height: 1.4

  @media screen and (min-height: 1100px)
    &:before,
    &:after
      content: ''
      width: 300px
      height 500px
      background-repeat: no-repeat
      background-size: 300px auto
      background-position: center bottom
      position: absolute
      left: 50%
      bottom: 0
      z-index: 1

    &:before
      background-image: url('/assets/images/helo.svg')
      transform: translateX(-200%)

    &:after
      background-image: url('/assets/images/boomer.svg')
      transform: translateX(100%)

a
  text-decoration: none

h1
  width: 100vw
  position: absolute
  left: 0
  top: 0
  font-size: 15vw
  font-weight: bold
  line-height: 1
  text-align: center
  text-transform: uppercase
  text-shadow: 0 13vw 0 white(.5),
               0 26vw 0 white(.4),
               0 39vw 0 white(.3),
               0 52vw 0 white(.2),
               0 65vw 0 white(.1)
  color: white(.6)

  @media screen and (min-width: 1400px)
    font-size: 8vw
    text-shadow: -55vw  0   0 white(.6),
                  55vw  0   0 white(.6),
                 -55vw  7vw 0 white(.5),
                  55vw  7vw 0 white(.5),
                   0    7vw 0 white(.5),
                 -55vw 14vw 0 white(.4),
                  55vw 14vw 0 white(.4),
                   0   14vw 0 white(.4),
                 -55vw 21vw 0 white(.3),
                  55vw 21vw 0 white(.3),
                   0   21vw 0 white(.3),
                 -55vw 28vw 0 white(.2),
                  55vw 28vw 0 white(.2),
                  0    28vw 0 white(.2),
                 -55vw 35vw 0 white(.1),
                  55vw 35vw 0 white(.1),
                   0   35vw 0 white(.1)

.face,
.mask
  width: 100vw
  height: $img-h
  position: absolute

.face img
  position: absolute
  top: 0
  z-index: 1
  width: $img-w

.mask

  .left,
  .right
    width: 100vw
    height: $img-h
    position: absolute
    bottom: 0
    mask-repeat: no-repeat
    mask-size: auto $img-h

  .left:after,
  .right:after
    content: ''
    width: 200px
    height: 100vh
    position: fixed

  .left:after
    background-image: linear-gradient(to right, black(.3) 50%, black(0) 57%)
  .right:after
    background-image: linear-gradient(to left, black(.3) 50%, black(0) 57%)

// neck
#neck
  width: 720px
  position: absolute
  bottom: var(--neck-y)
  z-index: 2

  img
    width: 100%

// puppet
#puppet
  position: absolute
  left: 1050px
  right: 1050px
  bottom: var(--face-y)
  display: flex
  z-index: 3
  justify-content: center
  overflow: hidden

  img
    width: auto
    height: $img-h
    margin: 0 auto

// nav
.main-nav
  width: 100%
  padding: 12px 12px 9px
  position: absolute
  bottom: 0
  left: 0
  box-sizing: border-box
  z-index: 50
  font-size: 80%

  a
    color: white

    &:hover
      background-repeat: no-repeat
      background-image: $gradient-white
      background-size: 100% 1px
      background-position: center bottom

  .nav-home a
    margin: 0
    display: inline-block

  .container
    display: flex

  @media screen and (max-width: 600px)
    background-image: $gradient-color

    .container
      justify-content: space-around
      flex-wrap: wrap

    a
      font-weight: $font-weight-semibold

    .nav-home
      width: calc(100% + 24px)
      margin: -12px
      margin-bottom: 10px
      padding: 10px 10px 8px
      text-align: center
      background-color: black(.7)
    

  @media screen and (min-width: 601px)
    background-color: grey(.92)

    .container
      justify-content: flex-end

    a
      margin-left: 1.5em
      font-weight: $font-weight-light

    .nav-home a
      margin: 0
      position: absolute
      left: 12px
      font-weight: $font-weight-semibold
