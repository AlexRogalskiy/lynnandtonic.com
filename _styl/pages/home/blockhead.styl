/*--------------------------------------------------------------------
* $HOME - Block head
--------------------------------------------------------------------*/

.home
  padding: 30px
  padding-right: 0
  font-size: 14px

  &:before
    grid-column: 10 / -1
    grid-row: 1 / 3
    align-self: stretch
    background: $red

  &:after
    grid-column: 3 / 8
    grid-row: 5 / 9
    z-index: 2
    align-self: stretch
    background: gold
    mix-blend-mode: multiply

  .main-nav
    grid-column: 1 / 3
    grid-row: 1

    a
      display: block
      font-weight: $font-weight-semibold
      color: black
      
      &:hover
        background: black
        color: white

  h1
    grid-column: 1 / 9
    grid-row: 2

    .name
      font-weight: $font-weight-semibold

  .intro
    grid-column: 1 / 7
    grid-row: 3

  .lynn
    grid-column: 3 / -1
    grid-row: 4 / -1
    margin-right: 30px

    img
      width: 100%
      filter: contrast(2) grayscale(100%)
