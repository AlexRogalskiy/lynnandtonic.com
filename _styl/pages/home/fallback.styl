/*--------------------------------------------------------------------
* $HOME - Fallback
--------------------------------------------------------------------*/

.home
  padding: 30px
  display: flex
  flex-direction: column
  align-items: center
  text-align: center
  
  .main-nav
    flex-order: 1
    order: 1
  .lynn
    flex-order: 2
    order: 2
  h1
    flex-order: 3
    order: 3
  .intro
    flex-order: 4
    order: 4

  .main-nav, h1, .intro
    width: 100%

  .main-nav
    margin: 20px 0
    text-align: center

    a
      margin: 0 15px
      padding: 2px
      color: black

      &:hover
        underline(gold)

      @media screen and (max-width: 400px)
        margin: 0 10px

  h1
    margin-bottom: 30px
    font-size: 20px

    .name
      margin-bottom: 10px
      display: block
      font-size: 30px
      font-weight: $font-weight-semibold

  .intro

    span
      margin-bottom: 15px
      display: block
  
  .lynn
    width: 300px
    height: @width
    margin-bottom: 30px
    background: $red
    border-radius: 50%
    overflow: hidden
    text-align: center

    img
      height: 100%
