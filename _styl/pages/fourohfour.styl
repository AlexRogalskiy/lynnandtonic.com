.fourohfour
  .sidebar
    display: none

  .container
    width: 100%
    height: 100vh
    align-items: center
    display: flex
    background: url('/assets/images/home-lynnfisher5.jpg') no-repeat center center
    background-size: cover

    h1
      width: 100%
      line-height: 1
      font-family: Helvetica
      font-weight: bold
      font-style: normal
      font-size: 300px
      text-align: center
      color: $teal
      mix-blend-mode: multiply
      @media (max-width: $bp-md)
        font-size: 200px
      @media (max-width: $bp-sm)
        font-size: 100px