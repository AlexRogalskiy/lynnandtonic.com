/*--------------------------------------------------------------------
* $ARCHIVE
--------------------------------------------------------------------*/

.archive

  .main-nav .nav-archive
    nav-active()

.archive-list
  font-size: 80%

  a
    background-image: none

  a.archive-image
    hoverShadow()

  li
    margin-bottom: 3em

    // non-grid
    @media screen and (min-width: 601px)
      width: 50%
      padding-right: 20px
      float: left
    @media screen and (min-width: 801px)
      width: 33.333%

  .links
    display: flex
    justify-content: space-between

  span.study a
    font-weight: $font-weight-light

  img
    margin-bottom: 10px
    display: block
    border: $border-light
    @media (prefers-color-scheme: dark)
      border: none

  @supports (display: grid)
    display: grid
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr))
    grid-gap: 3em

    li
      width: 100%
      margin-bottom: 0
      padding-right: 0
      float: none
