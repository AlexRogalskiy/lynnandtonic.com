/*--------------------------------------------------------------------
* $THOUGHTS ENTRIES
--------------------------------------------------------------------*/

.thoughts,
.thought-detail

  .main-nav
    .nav-thoughts
      background: black
      color: white

.thoughts
  .content
    max-width: 600px
    margin: 30px auto 60px
    padding: 0 20px

  .thought
    margin-bottom: 30px

  .date
    display: block
  
  .project-title
    underline(white)

  .external:not(:empty)
    margin-left: 15px

    &:after
      content: 'â†—'
      margin-left: 4px
      display: inline-block
      font-size: 12px
      position: relative

.thought-detail

  .content
    max-width: 800px
    margin: 0 auto 30px
    display: grid
    grid-template-columns: b(full-start) minmax(1em, 1fr) b(main-start) minmax(0, 30em) b(main-end) minmax(1em, 1fr) b(full-end)

    & > *
      grid-column: main

    .wide
      grid-column: full
      margin-bottom: 30px

  .date
    margin-bottom: 10px

  .date, h1
    text-align: center

  .back
    margin-top: 30px
    padding-top: 20px
    border-top: 1px dotted $red

  .twitter-tweet
    margin-bottom: 30px !important
