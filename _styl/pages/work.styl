/*--------------------------------------------------------------------
* $WORK
--------------------------------------------------------------------*/

.work

  &.web .main-nav .nav-web,
  &.art .main-nav .nav-art
    nav-active()

  h2
    margin-bottom: 10px
    a
      background-image: none

  a.project-image
    margin-bottom: 1.5em
    hoverShadow()

  img.project-image
    margin-bottom: .5em
    display: block

  .border
    border: 1px solid $grey-lightest
    @media (prefers-color-scheme: dark)
      border: none

  .projects-list
    @media screen and (min-width: 801px)
      @supports (display: grid)

        display: grid
        grid-template-columns: 1fr 1fr
        grid-column-gap: 3em

  &.art .projects-list
    @media (prefers-color-scheme: dark)
      position: relative
      padding-top: 1em

      &:before
        content: 'Dark Mode! Tap/hover images for full brightness. ðŸ˜Ž'
        padding: 5px 10px
        position: absolute
        top: -2em
        right: 0
        font-size: 70%
        background-color: black(.2)
        border-radius: 3px

  .project

    &.multi
      @media screen and (max-width: 800px)
        > div:not(:last-child)
          margin-bottom: 1em
      @media screen and (min-width: 801px)
        grid-column: 1 / -1
        display: grid
        grid-template-columns: 1fr 1fr
        grid-gap: 1em

    img
      display: block

  &.web .project
    @media screen and (max-width: 650px)
      &:not(:last-child)
        margin-bottom: 3em
    @media screen and (min-width: 651px)
      &:not(:last-child):not(:nth-last-child(2))
        margin-bottom: 5em

  &.art .project
    @media screen and (max-width: 650px)
      &:not(:last-child)
        margin-bottom: 2em
    @media screen and (min-width: 651px)
      &:not(:last-child):not(:nth-last-child(2))
        margin-bottom: 3em

  .wide
    grid-column: 1 / -1

  h2
    margin-bottom: 1em

  .project-link
    margin-bottom: 5px
    padding-left: 20px
    display: block
    position: relative

    span,
    &.github:before
      position absolute
      left: 0
      top: 1px

    &.github:before
      content: ''
      width: 15px
      height: @width
      background-repeat: no-repeat
      background-image: url('/assets/images/social-github.svg')
      background-size: contain
      @media (prefers-color-scheme: dark)
        filter: invert(80%)
