/*--------------------------------------------------------------------
* $FOOTER
--------------------------------------------------------------------*/

.main-footer
  margin-top: 5em
  font-size: 80%

  .container
    padding: 2em 0 1em
    background-repeat: no-repeat
    background-image: linear-gradient(to right, $magenta, $cyan)
    background-size: 100% 1px
    background-position: center top

    @media screen and (min-width: 601px)
      display: flex
      justify-content: space-between

  .motto
    display: block
    margin-bottom: .5em

  a

    &.social
      width: 20px
      height: @width
      margin-left: .25em
      position: relative
      top: -1px
      background-repeat: no-repeat
      background-position: center center
      background-size: contain
      text-indent: -9999em
      @media (prefers-color-scheme: dark)
        filter: invert(80%)

      &:after
        content: ''
        width: 28px
        height: @width
        position: absolute
        left: 50%
        top: 50%
        transform: translate(-50%,-50%)
        border: 1px solid black
        border-radius: 50%
        opacity: 0
        transition: all 150ms ease-in-out

      &:focus
        background-color: transparent

      &:hover:after,
      &:focus:after
        opacity: 1
        transform: translate(-50%,-50%) scale(1.2)

    &.twitter
      background-image: url('/assets/images/social-twitter.svg')
    &.github
      background-image: url('/assets/images/social-github.svg')
    &.instagram
      background-image: url('/assets/images/social-instagram.svg')
      &:after
        border-radius: 3px
    &.dribbble
      background-image: url('/assets/images/social-dribbble.svg')

