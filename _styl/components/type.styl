h1, h2, h3, h4, h5
  font-weight: $font-weight-medium
  color: $blue-saturated-dark
  
hr
  margin: $space 0
  height: 1px
  background-color: $gray-lighter
  border: none

blockquote strong
  color: $gray-dark
  
.blockquote-case-study
  padding-left: 0

.wf-loading, .wf-inactive
  body, h1, h2, h3, h4, h5, h6
    font-family: helvetica neue, helvetica, arial, sans-serif

.wf-active 
  
  body
    font-family: $font-proxima
  
  h1, h2, h3, h4, h5, h6
    font-family: $font-aktiv