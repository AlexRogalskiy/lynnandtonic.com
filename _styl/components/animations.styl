/*--------------------------------------------------------------------
*
* $ANIMATIONS
*
--------------------------------------------------------------------*/

.animated
  animation-duration: 1s
  animation-fill-mode: both

.animated.infinite
  animation-iteration-count: infinite

.animated.hinge
  animation-duration: 2s
 
.pulse
  animation-name: pulse
  
@keyframes pulse
  0%
    transform: scale3d(1, 1, 1)

  50%
    transform: scale3d(1.05, 1.05, 1.05)

  100%
    transform: scale3d(1, 1, 1)