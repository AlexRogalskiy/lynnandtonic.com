doctype html
html(lang='en')

  //- Variable block for page-specific info
  block vars

  head

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='chrome=1')
    meta(name='viewport',content='width=device-width, initial-scale=1, minimum-scale=1')

    meta(name='description', content=pageDescription)
    meta(name='author', content='Lynn Fisher')
    title
      block title
      | Lynn Fisher

    link(rel='stylesheet', href='https://use.typekit.net/nxz6zzt.css')

    link(rel='shortcut icon', href='/assets/images/pizza-icon.png')
    if bodyClass == 'home'
      link(rel='stylesheet', href='/assets/css/home.min.css')
    else
      link(rel='stylesheet', href='/assets/css/main.min.css')
    block scripts

  body(class=bodyClass)

    nav.main-nav
      a.nav-home(href='/') Home
      a.nav-web(href='/web') Web
      a.nav-art(href='/art') Art
      a.nav-about(href='/about') About
      a.nav-thoughts(href='/thoughts') Thoughts

    block content

    include includes/ga.html
