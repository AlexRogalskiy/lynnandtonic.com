doctype html
html(lang='en')

  //- Variable block for page-specific info
  block vars

  head

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='chrome=1')
    meta(name='viewport',content='width=device-width, initial-scale=1, minimum-scale=1')

    meta(name='description', content=pageDescription)
    meta(name='author', content='Lynn Fisher')

    title
      block title
      | Lynn Fisher

    link(rel='shortcut icon', href='/assets/images/pizza-icon.png')
    link(rel='stylesheet', href='https://use.typekit.net/ebm6qdq.css')

    if bodyClass == 'home'
      link(rel='stylesheet', media='screen and (max-device-width: 1600px)', href='/assets/css/home-small.css')
      link(rel='stylesheet', media='screen and (min-device-width: 1601px)', href='/assets/css/home-large.css')
    else
      link(rel='stylesheet', href='/assets/css/main.min.css')

    block scripts

  body(class=bodyClass)

    nav.main-nav
      a.logo(href='/') Lynn Fisher
      a.nav-web(href='/web') Web
      a.nav-art(href='/art') Art
      a.nav-about(href='/about') About
      a.nav-thoughts(href='/thoughts') Thoughts
      a.nav-archive(href='/archive') Archive

    block content

    footer.main-footer
      span Have a great day!
      nav
        a(href='https://twitter.com/lynnandtonic') Twitter
        a(href='https://instagram.com/lynnandtonic') Instagram
        a(href='https://dribbble.com/lynnandtonic') Dribbble
        a(href='https://github.com/lynnandtonic') GitHub
        a(href='https://www.etsy.com/shop/lynnandtonic') Shop

    include includes/ga.html
