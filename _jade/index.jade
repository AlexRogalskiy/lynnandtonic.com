  script.
    var emailInput = document.getElementById('mce-EMAIL');
    emailInput.addEventListener('change', function () {
      var val = emailInput.value.replace(/\s*/g, '');
      if (val) {
        _kmq.push(['identify', val]);
      }
    });
    _kmq.push(['trackSubmit', '.andyou-form', '&you Subscribe']);
