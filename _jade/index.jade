block vars
  - var pageDescription = '&yet is an open web company consulting on WebRTC, Node, and advanced JavaScript applications.'
  - var viewClass = 'default'
  - var headlineClass = 'home'
  - var headlineText = 'Software is about people'

extends layout

block content

  .container
    section.center.no-border-bottom

      h2.mb2 We design, build, and secure software.

      .teams-grid
        //- Team items are in this order for mobile viewing (stacked)
        //- Flexbox order rearranged them for desktop viewing (grid)
        h3.teams-category.security Security
        .teams-item.team-nsp
          .logo-container
            a(href='//nodesecurity.io'): img.logo.nsp(src='/images/logo-node-security-project.svg', alt='Node Security Platform')
          p Continuous Security monitoring for your Node apps
        .teams-item.team-lift
          .logo-container
            a(href='//liftsecurity.io'): img.logo.lift(src='/images/logo-lift.svg', alt='^Lift')
          p Your guides in shipping secure Node software
        h3.teams-category.design Design & Dev
        .teams-item.team-yesand
          .logo-container
            a(href='//yesand.is'): img.logo.yesand(src='/images/logo-yesand.svg', alt='yes&')
          p Design and creative services for tech companies
        .teams-item.team-seaworthy
          .logo-container
            a(href='//seaworthy.io'): img.logo.seaworthy(src='/images/logo-seaworthy.svg', alt='Seaworthy')
          p JS, architecture, and database consulting for enterprises
        h3.teams-category.realtime Realtime
        .teams-item.team-talky
          .logo-container
            a(href='//talky.io'): img.logo.talky(src='/images/logo-talky.svg', alt='Talky')
          p Truly simple video chat and screen sharing for groups
        .teams-item.team-talky-core
          .logo-container
            a(href='//about.talky.io/core'): img.logo.talky-core(src='/images/logo-talky-core.svg', alt='Talky Core')
          p Easiest way to add voice, video, and screen-sharing to your app

